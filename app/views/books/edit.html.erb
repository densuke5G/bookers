<html>
  <head>

    <title>WebCampBackendNew</title>
  </head>
  <body>
    <div class="edit">
      <h1><b>Editing Book</b></h1>
      
      <div class="edit-form">
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
            <%= f.text_field :title %>

          <h4>Body</h4>
            <%= f.text_area :body %>

            <%= f.submit :'Update Book'%>
        <% end %>
      </div>

      <%= link_to 'Show', book_path, class: "edit-show" %>
      |
      <%= link_to 'Back', '/books', class: "edit-index" %>
    </div>
  </body>
</html>
