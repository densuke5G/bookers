<html>
  <head>
    <title>WebCampBackendNew</title>
  </head>
  <body>
    <div class="index">
      <%= flash[:notice] %>
      
      <h1>Books</h1>

      <table>
        <thead>
            <tr>
              <th>Title</th>
              <th>Body</th>
              <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
              <td><%= link_to 'Show', book_path(book.id) %></td>
              <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
              <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
            </tr>
            <% end %>
        </tbody>
      </table>


      <h2>New book</h2>

      <% if @book.errors.any? %>
        <h2><%= @book.errors.count %> errors occured!!</h2>
        <ul>
          <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="index-form">
        <%= form_with model: @book do |f| %>
          <div class="create-form">
            <h4>Title</h4>
              <%= f.text_field :title %>
          </div>

          <div class="create-form">
            <h4>Body</h4>
              <%= f.text_area :body %>
          </div>
        
          <div class="create-form">
              <%= f.submit :'Create Book'%>
          </div>
      <% end %>
      
      </div>
    </div>
  </body>
</html>
